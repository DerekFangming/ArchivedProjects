<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		>
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	<s:Group>
       <s:Rect width="480" height="55" radiusX="2" >
			<s:stroke>
				<s:SolidColorStroke color.up="0x000000" alpha.down="0.6"/> 
			</s:stroke>
			<s:fill> 
				<s:LinearGradient rotation="90"> 
					<s:entries> 
						<s:GradientEntry color="0xFFFFFF" color.down="0xE1E9F1" /> 
						<s:GradientEntry color="0xD9D9D9" color.down="0xB4D8DD" /> 
					</s:entries> 
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:Label id="labelDisplay" horizontalCenter="0" verticalCenter="0"/>
	</s:Group>
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
</s:Skin>
