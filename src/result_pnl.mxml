<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:ns1="*"
		 width="320" height="480">
	<fx:Script>
		<![CDATA[
			import com.esri.ags.layers.supportClasses.StaticLayer_m_globe;
			
			import flash.sampler.NewObjectSample;
			
			import mx.collections.ArrayCollection;
			import mx.containers.Form;
			import mx.controls.Label;
			import mx.events.FlexEvent;
			
			import spark.events.GridSelectionEvent;
			

			[Bindable]
 			public static var arr:ArrayCollection=new ArrayCollection();
			
			
			protected function dg_selectionChangeHandler(event:GridSelectionEvent):void
			{				
				txtArea.text="";
				var row:Object=dg.dataProvider.getItemAt(dg.selectedIndex);
				for(var i:String in row)
				{
					txtArea.text=txtArea.text+i+":"+row[i]+"\n";
				}
				
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:MenuBar id="mnBr2" x="25" y="-33" width="295" height="25" 
				iconField="icon" labelField="label"/>
		<s:DataGrid id="dg" x="0" top="-9" width="100%" height="258" alpha="0.5" dataProvider="{arr}"
					selectionChange="dg_selectionChangeHandler(event)" verticalScrollPolicy="auto">		
		<s:columns>
			<s:ArrayList>
				<s:GridColumn id="column1" dataField="{mapView.selectionLabel1}" headerText="@{mapView.selectionLabel1}"/>
				<s:GridColumn id="column2" dataField="{mapView.selectionLabel2}" headerText="@{mapView.selectionLabel2}"/>				
				<s:GridColumn id="column3" dataField="{mapView.selectionLabel3}" headerText="@{mapView.selectionLabel3}"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<s:TextArea id="txtArea" x="0" y="247" width="320" height="224"/>	
</s:Group>