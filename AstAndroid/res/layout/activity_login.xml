<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_login_page" 
    
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
      <!-- #FFFFE7(LIGHT YELLOW)    #F0C639(DARK YELLOW)  @drawable/custom_login_page (gradient)-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.7" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/assistmentsLogo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/assistments_logo" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:paddingTop="20dp"
                android:singleLine="true"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:focusable="false" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:focusable="false"
                android:password="true"
                android:singleLine="true" />

            <CheckBox
                android:id="@+id/remenberCheckbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:text="Remember me"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnLogin"
                android:background="@drawable/custom_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Log in" />

            <Button
                android:id="@+id/btnRegister"
                android:background="@drawable/custom_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Register" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15" >
    </RelativeLayout>

</LinearLayout>